//1.	Dado un número entero N, hacer un programa para sumar los dígitos de cada uno de ellos.   
//Ej. Si N= 45634,  la suma es 4+5+6+3+4=22

////LIBRERIAS
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;


void main ()
{int N,y,x,s=0;
	do
	{
		cout <<"Ingrese un numero que tenga mas de tres digitos: "<< endl;
	 cin >>N;
	}while(N<100);
 
	while(N>0)

 {x=N%10;
  s=s+x;
  y=N/10;
  N=y;
 }
  cout<<"La suma es: "<< s;
_getch();
}

